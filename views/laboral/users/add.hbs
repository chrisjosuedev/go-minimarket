<div class="container p-4">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header font-weight-bold">
                    Agregar Usuarios
                </div>
                <div class="card-body">
                    <form action="/laboral/users/add" method="POST">

                        <div class="form-group">
                            <select id="inputState sel-tipo" name="id_empleado" class="custom-select">
                                <option selected> - Seleccionar Empleado - </option>
                                {{> options/select-empleados }}
                            </select>
                        </div>

                        <div class="form-group">
                            <input type="text" class="form-control" name="username" placeholder="Username" autofocus
                                required>
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" name="password" placeholder="Password"
                                required>
                        </div>

                        <div class="form-group">
                            <select id="inputState sel-tipo" name="id_rol" class="custom-select">
                                <option selected> - Seleccionar rol - </option>
                                {{> options/select-roles }}
                            </select>
                        </div>

                        <div class="form-group">
                            <button class="btn btn-success float-right">
                                <i class="fas fa-save"></i> Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            {{> list-users }}
        </div>
    </div>
</div>