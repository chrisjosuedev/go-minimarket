<div class="container p-4">
    <div class="row">
        <div class="col-md-4 d-none" id="add-cat">
            <div class="card">
                <div class="card-header font-weight-bold">
                    Agregar Categoria Laboral
                </div>
                <div class="card-body">
                    <form action="/laboral/categorias/add" method="POST">
                        <div class="form-group">
                            <input type="text" onkeyup="javascript:this.value=this.value.toUpperCase();"
                                class="form-control to-mayus" name="descripcion_categoria" placeholder="Descripción"
                                autofocus required>
                        </div>
                        <div class="form-group">
                            <input type="number" min="0" step="0.01" class="form-control" name="salario"
                                placeholder="Salario">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success float-right">
                                <i class="fas fa-save"></i> Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-8 mx-auto" id="list-cat">
            {{> list-categorias }}
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"
    integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
<script>
    const add_cat = $('#add-cat')
    const list_cat = $('#list-cat')

    // ID PRIVILEGIO
    var tipoPrivilegio = `{{user.ID_ROL}}`

    // DISEÑADOR
    if (tipoPrivilegio === '7') {
        console.log("Diseñador")
    }
    else if (tipoPrivilegio === '3') {
        add_cat.removeClass('d-none');
        list_cat.removeClass('mx-auto')
    }

</script>