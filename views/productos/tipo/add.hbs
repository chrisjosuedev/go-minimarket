<div class="container p-4">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header font-weight-bold">
                    Agregar tipo de productos
                </div>
                <div class="card-body">
                    <form action="/productos/tipo/add" method="POST">
                        <div class="form-group">
                            <input type="text" onkeyup="javascript:this.value=this.value.toUpperCase();" class="form-control to-mayus" name="nombre_tipoproducto"
                                placeholder="Nombre del Producto" autofocus required>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success float-right">
                                <i class="fas fa-save"></i> Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
        <div class="col-md-8">
            {{> list-tipos }}
        </div>

    </div>
</div>