<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-header font-weight-bold">
                    Editar proveedor
                </div>
                <div class="card-body">
                    <form action="/productos/proveedores/edit/{{proveedores.ID_PROVEEDOR}}" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" name="nombre_proveedor" value="{{proveedores.NOMBRE_PROVEEDOR}}" placeholder="Proveedor"
                                required>
                        </div>
                        <div class="form-group">
                            <input type="email" class="form-control" name="email_proveedor" value="{{proveedores.EMAIL_PROVEEDOR}}" placeholder="Email"
                                required>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="cel_proveedor" value="{{proveedores.CEL_PROVEEDOR}}" placeholder="Celular" required>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success float-right">
                                <i class="fas fa-save"></i> Editar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>