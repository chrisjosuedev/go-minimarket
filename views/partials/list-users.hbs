{{#each usuario}}

<div class="col-md-12 mx-auto">
    <div class="card border-dark mb-3">
        <div class="card-header">
            <strong class="mr-2"> Username: </strong> {{USERNAME}}
        </div>
        <div class="card-body">
            <div class="row ml-2">
                <p class="ml-2 prove-style"><strong class="mx-2"> Rol: </strong> {{DESC_ROL}} </p>
            </div>

            <div class="text-right">
                <a href="/laboral/users/delete/{{USERNAME}}" class="btn btn-danger btn-sm"> Eliminar </a>
                <a href="/laboral/users/edit/{{USERNAME}}" class="btn btn-secondary btn-sm"> Editar </a>
            </div>
        </div>

    </div>
</div>


{{else}}
<div class="col-md-12 mx-auto">
    <div class="card card-body text-center">
        <p class="mt-3"> No existen usuarios asignados </p>
    </div>
</div>
{{/each}}