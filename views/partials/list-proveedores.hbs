{{#each proveedores}}

<div class="col-md-12 mx-auto">
    <div class="card border-dark mb-3">
        <div class="card-header">
            <strong class="mr-2"> R.T.N.: </strong> {{ID_PROVEEDOR}}
        </div>
        <div class="card-body">
            <div class="row ml-2">
                <p class="pb-2 prove-style"><strong class="mx-2"> Proveedor: </strong> {{NOMBRE_PROVEEDOR}} </p>
                <p class="ml-2 prove-style"><strong class="mx-2"> Email: </strong> {{EMAIL_PROVEEDOR}} </p>
            </div>
            <div class="row ml-2">
                <p class="pb-2 prove-style"><strong class="mx-2"> Celular: </strong> {{CEL_PROVEEDOR}} </p>
            </div>


            <div class="text-right">
                <a href="/productos/proveedores/edit/{{ID_PROVEEDOR}}" class="btn btn-secondary btn-sm edit-pro"> Editar </a>
            </div>
        </div>

    </div>
</div>


{{else}}
<div class="col-md-12 mx-auto">
    <div class="card card-body text-center">
        <p class="mt-3"> No existen proveedores </p>
    </div>
</div>
{{/each}}

