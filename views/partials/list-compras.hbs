<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">ID Compra</th>
            <th scope="col">Proveedor</th>
            <th scope="col">Fecha</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each compras}}
        <tr>
            <td>
                {{ID_COMPRA}}
            </td>
            <td>
                {{NOMBRE_PROVEEDOR}}
            </td>
            <td>
                {{format FECHA}}
            </td>
            <td>
                <a href="/facturacion/compras/transacciones/{{ID_COMPRA}}" class="btn btn-light">
                    <i class="fas fa-eye"></i>
                </a>
            </td>
        </tr>
        {{else}}
        <div class="col-md-12 mb-4 mx-auto">
            <div class="card card-body text-center">
                <p class="mt-3"> No existen compras </p>
            </div>
        </div>
        {{/each}}
    </tbody>
</table>