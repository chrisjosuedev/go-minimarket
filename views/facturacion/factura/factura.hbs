<div class="container p-4">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header font-weight-bold">
                    <i class="fas fa-cart-plus"></i> NUEVA FACTURA
                </div>
                <div class="card-body">
                    <form>
                        <label>Datos</label>
                        <div class="form-row">
                            <div class="form-group col-md-4">
                                <select id="inputState sel-tipo" class="custom-select">
                                    <option selected> - Cliente - </option>
                                    {{!--{{> options/select-marca }}--}}
                                </select>
                                <button type="button" class="btn btn-success float-right mt-2 ml-2">
                                    <i class="far fa-address-card"></i> Nuevo
                                </button>
                            </div>
                            <div class="form-group col-md-4">
                                <input type="text" class="form-control" placeholder="Email" disabled>
                            </div>
                            <div class="form-group col-md-4">
                                <input type="text" class="form-control" placeholder="Celular" disabled>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-4">
                                <select id="inputState sel-tipo" class="custom-select">
                                    <option selected> - Empleado atendi√≥ - </option>
                                    {{!--{{> options/select-marca }}--}}
                                </select>
                            </div>
                            <div class="form-group col-md-4">
                                <select id="inputState sel-tipo" class="custom-select">
                                    <option selected> - Metodo de Pago - </option>
                                    {{!--{{> options/select-marca }}--}}
                                </select>
                            </div>
                        </div>


                        <label>Productos</label>


                        <div class="form-row">

                            <div class="form-group col-md-4">
                                <select id="inputState sel-tipo" class="custom-select">
                                    <option selected> - Productos - </option>
                                    {{!--{{> options/select-marca }}--}}
                                </select>
                            </div>

                            <div class="form-group col-md-4">
                                <input type="number" class="form-control" min="1"
                                    onkeydown="if(event.key==='.'){event.preventDefault();}" placeholder="Cantidad"
                                    required>
                            </div>
                        </div>



                        <!-- Boton Save -->

                        <button type="button" class="btn btn-success float-right mb-4">
                            <i class="fas fa-print"></i> Imprimir Factura
                        </button>

                        <button type="button" class="btn btn-success float-right mb-4 mr-2">
                            <i class="fas fa-file-invoice"></i> Procesar
                        </button>

                        <button type="submit" class="btn btn-success float-right mb-4 mr-2">
                            <i class="far fa-plus-square"></i> Agregar Producto
                        </button>
                        <div class="col-md-12 mt-5">
                            {{> factura-list-registro }}
                        </div>
                    </form>

                    <div class="form-group col-md-2 float-right">
                        <input type="text" class="form-control" placeholder="Subtotal" disabled>
                        <input type="text" class="form-control mt-2" placeholder="ISV" disabled>
                        <input type="text" class="form-control mt-2" placeholder="Total" disabled>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>