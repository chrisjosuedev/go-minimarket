<div class="container p-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header font-weight-bold">
                    Editar Clientes
                </div>
                <div class="card-body">
                    <form action="/persona/clientes/edit/{{persona.ID_PERSONA}}" method="POST">
                        <div class="form-group">
                            <div class="form-group">
                                <input type="text" class="form-control" name="nombre_persona"
                                    value="{{persona.NOMBRE_PERSONA}}" placeholder="Nombre">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="form-group">
                                <input type="text" class="form-control" name="apellido_persona"
                                    value="{{persona.APELLIDO_PERSONA}}" placeholder="Apellidos">
                            </div>
                        </div>
                        <div class="form-row">

                            <div class="form-group col-md-4 text-center mt-2">
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="sexo" id="male" value="0">
                                    <label class="form-check-label" for="inlineRadio1"> Masculino </label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="sexo" id="female" value="1">
                                    <label class="form-check-label" for="inlineRadio2"> Femenino </label>
                                </div>
                            </div>
                            <div class="form-group col-md-8">
                                <input type="text" class="form-control" name="celular" value="{{persona.CELULAR}}"
                                    placeholder="Celular">
                            </div>
                        </div>


                        <div class="form-group">
                            <div class="form-group">
                                <textarea class="form-control" name="direccion_residencia" id="" cols="30" rows="2"
                                    placeholder="Direccion de Residencia"> {{persona.DIRECCION_RESIDENCIA}}</textarea>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group col-md-6" id="tipo">
                                <select id="depto" name="id_depto" class="custom-select">
                                    <option selected> - Seleccione Departamento - </option>
                                    {{> options/select-depto }}
                                </select>
                            </div>
                            <div class="form-group col-md-6">
                                <select id="ciudad" name="id_ciudad" class="custom-select">
                                    <option selected> - Seleccione Ciudad - </option>
                                    {{> options/select-ciudad }}
                                </select>
                            </div>
                        </div>

                        <button type="submit" id="test" class="btn btn-success float-right">
                            <i class="fas fa-save"></i> Editar
                        </button>
                    </form>
                </div>
            </div>

        </div>

    </div>

</div>

{{> options/dynamic-select }}
{{> options/dynamic-person }}
